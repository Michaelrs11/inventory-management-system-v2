@page
@model IMS.BE.Pages.Auth.ForgotPassModel
@{
    ViewBag.Title = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Forgot Password</h1>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="text-danger">
                    @Model.ErrorMessage
                </div>
            }
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="ChangePassForm.UserCode" placeholder="User Code">User Code</label>
                    <input type="text" asp-for="ChangePassForm.UserCode" class="form-control" />
                    <span asp-validation-for="ChangePassForm.UserCode" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ChangePassForm.NewPassword" placeholder="Password">New Password</label>
                    <input type="password" asp-for="ChangePassForm.NewPassword" class="form-control" />
                    <span asp-validation-for="ChangePassForm.NewPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ChangePassForm.ConfirmPassword" placeholder="Confirm Password">Confirmation Password</label>
                    <input type="password" asp-for="ChangePassForm.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ChangePassForm.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary col-md-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>