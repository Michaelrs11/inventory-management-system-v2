<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Management System</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IMS.BE.styles.css" asp-append-version="true" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="~/css/bar.css" rel="stylesheet" />
</head>
<body>
    @if(User.Identity.IsAuthenticated){
        <div class="page-wrapper chiller-theme toggled">
            <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
                <i class="fas fa-bars"></i>
            </a>
            <nav id="sidebar" class="sidebar-wrapper">
                <div class="sidebar-content">
                    <div class="sidebar-brand">
                        <a href="#">IMS</a>
                        <div id="close-sidebar">
                            <i class="fas fa-times"></i>
                        </div>
                    </div>
                    <div class="sidebar-header">
                        <div class="user-info">
                            <span class="user-name">
                               Hello, @User.Identity.Name
                            </span>
                            <span class="user-role">Role: @User.Claims.Select(Q => Q.Value).FirstOrDefault()</span>
                            <span class="user-status">
                                <i class="fa fa-circle"></i>
                                <span>Online</span>
                            </span>
                        </div>
                    </div>
                    <!-- sidebar-search  -->
                    <div class="sidebar-menu">
                        <ul>
                            <li class="header-menu">
                                <span>Master</span>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <span>Add</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            <a asp-page="/Master/Barang/Add" class="nav-link text-light">Tambah Barang</a>
                                        </li>
                                        <li>

                                            <a asp-page="/Master/Gudang/Add" class="nav-link text-light">Tambah Gudang</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Master/Kategori/Add" class="nav-link text-light">Tambah Kategori</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <span>View</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            <a asp-page="/Master/Barang/View" class="nav-link text-light">List Barang</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Master/Gudang/View" class="nav-link text-light">List Gudang</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Master/Kategori/View" class="nav-link text-light">List Kategori</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="header-menu">
                                <span>General</span>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <span>Transaction</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            <a asp-page="/Transaction/Inbound" class="nav-link text-light">Inbound</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Transaction/ViewInbound" class="nav-link text-light">View Inbound</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Transaction/Outbound" class="nav-link text-light">Outbound</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Transaction/ViewOutbound" class="nav-link text-light">View Outbound</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Transaction/Rekap" class="nav-link text-light">Rekap</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="header-menu">
                                <span>Settings</span>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <span>Profile</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            <a asp-page="/Auth/ChangePass" class="nav-link text-light">Change Password</a>
                                        </li>
                                        <li>
                                            <a asp-page="/Auth/Logout" class="nav-link text-light">Logout</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>                    
                        </ul>
                    </div>
                    <!-- sidebar-menu  -->
                </div>
            </nav>
            <!-- sidebar-wrapper  -->
            <main class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <!-- page-content" -->
        </div>
    }
    @RenderBody()
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js">
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-2.2.4.js"
            integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.6/dist/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script type="text/javascript" >
        $(".sidebar-dropdown > a").click(function () {
            $(".sidebar-submenu").slideUp(200);
            if (
                $(this)
                    .parent()
                    .hasClass("active")
            ) {
                $(".sidebar-dropdown").removeClass("active");
                $(this)
                    .parent()
                    .removeClass("active");
            } else {
                $(".sidebar-dropdown").removeClass("active");
                $(this)
                    .next(".sidebar-submenu")
                    .slideDown(200);
                $(this)
                    .parent()
                    .addClass("active");
            }
        });

        $("#close-sidebar").click(function () {
            $(".page-wrapper").removeClass("toggled");
        });
        $("#show-sidebar").click(function () {
            $(".page-wrapper").addClass("toggled");
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>