@page
@model IMS.BE.Pages.Master.Kategori.AddModel
@{
    ViewData["Title"] = "Tambah Kategori";
}

<div class="card">
    <div class="card-body">
        <form method="post">
            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="text-danger">
                    @Model.ErrorMessage
                </div>
            }
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <div class="form-row">
                        <div class="col-sm-6">
                            <label for="categoryId">Kode Kategori</label>
                            <input type="text" class="form-control" asp-for="CategoryModel.CategoryId" />
                            <span asp-validation-for="CategoryModel.CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-6">
                            <label for="status">Name</label>
                            <input type="text" class="form-control" asp-for="CategoryModel.Name" />
                            <span asp-validation-for="CategoryModel.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12 mt-auto d-flex justify-content-end ml-auto">
                            <button type="submit" class="btn btn-primary mt-auto">Simpan</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>