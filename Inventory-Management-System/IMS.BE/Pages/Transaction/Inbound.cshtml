@page
@model IMS.BE.Pages.Transaction.InboundModel
@{
    ViewData["Title"] = "Inbound";
}

<div class="row">
    <div class="col-md-12">
        <h2>Inbound</h2>
    </div>
</div>
<hr />

<div class="card">
    <div class="card-body">
        <form method="post">
            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="text-danger">
                    @Model.ErrorMessage
                </div>
            }
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <div class="form-row">
                        <div class="col-sm-6">
                            <label class="form-label" asp-for="InboundData.GudangCode">Gudang</label>
                            <select class="form-select" asp-for="InboundData.GudangCode" asp-items="Model.GudangCodeDropdown">
                                <option value="">--Select Gudang--</option>
                            </select>
                            <span asp-validation-for="InboundData.GudangCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-6">
                            <label class="form-label" asp-for="InboundData.SkuCode">Barang</label>
                            <select class="form-select" asp-for="InboundData.SkuCode" asp-items="Model.BarangCodeDropdown">
                                <option value="">--Select Barang--</option>
                            </select>
                            <span asp-validation-for="InboundData.SkuCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-6">
                            <label for="status">Stock In</label>
                            <input type="number" class="form-control" asp-for="InboundData.StockIn" />
                            <span asp-validation-for="InboundData.StockIn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12 mt-auto d-flex justify-content-end ml-auto">
                            <button type="submit" class="btn btn-primary mt-auto">Simpan</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>